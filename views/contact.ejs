<div class="container-mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>

            <% if (msg.lenght !== 0) { %>
             <div class="alert alert-success" role="alert"> <%= msg %>  </div>
            <% } %>

            <a href="/contact/add" class="btn btn-primary mb-2">Add Contact</a>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Nomor</th>
                    <th scope="col">Detail</th>
                  </tr>
                </thead>
                <tbody>

                  <% contacts.forEach((contact, i) => { i++ %>

                  <tr>
                    <th scope="row"> <%= i++ %> </th>
                    <td> <%= contact.nama %>  </td>
                    <td> <%= contact.phone %> </td>
                    <td>
                        <a href="/contact/<%= contact.nama %> " class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i>detail</a>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>